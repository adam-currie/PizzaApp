<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.adam_currie.pizzaapp">

    <uses-permission android:name="android.permission.ACTION_CREATE_DOCUMENT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PizzaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.GeneralInfoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.ConfirmActivity" />
        <activity android:name=".view.activities.OrderInfoActivity" />
        <activity android:name=".view.activities.SidesOrderActivity"/>
        <activity android:name=".view.activities.SideDetailActivity"/>
    </application>

</manifest>
